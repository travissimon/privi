@import(
	"github.com/travissimon/privi/models"
)

@package views

@data_type: *models.LoginResult

%html{lang="en"}
  %head
    %title Create New User
    %meta{http-equiv="Content-Type", content="text/html; charset=UTF-8"}
    %meta{charset="utf-8"}
    %meta{name="viewport", content="width=device-width, initial-scale=1.0"}
    %link{href="/static/css/bootstrap.min.css", rel="stylesheet"}
    %link{href="/static/css/bootstrap-responsive.css"}

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->

    %style{type="text/css"}
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      \.form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        \-webkit-border-radius: 5px;
        \-moz-border-radius: 5px;
        border-radius: 5px;
        \-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        \-moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      \.form-signin .form-signin-heading,
      \.form-signin .checkbox {
        margin-bottom: 10px;
      }
      \.form-signin input[type="text"],
      \.form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
    
  %body{style="zoom: 1;"}

    .container

      %form.form-signin
        %h2.form-signin-heading Create New User

        %input.input-block-level{type="text", name="txtUsername", placeholder="Username"}/
        %input.input-block-level{type="password",  name="txtPassword", placeholder="Password"}/
        %input.input-block-level{type="password", name="txtPasswordConfirm", placeholder="Confirm Password"}/
        %input.input-block-level{type="text", name="txtRecoveryEmail", placeholder="Recovery Email Address"}/
        %label.checkbox
          %input{type="checkbox", value="remember-me"}/ Remember me

        %button.btn.btn-large.btn-primary{type="submit"} Sign in

        %p <a href="/NewUser">Create New Account</a>
    %script{src="/static/js/jquery-1.9.1.js"}
    %script{src="/static/js/bootstrap.min.js"}

    <script id="hiddenlpsubmitdiv" style="display: none;"></script><script>try{for(var lastpass_iter=0; lastpass_iter < document.forms.length; lastpass_iter++){ var lastpass_f = document.forms[lastpass_iter]; if(typeof(lastpass_f.lpsubmitorig2)=="undefined"){ lastpass_f.lpsubmitorig2 = lastpass_f.submit; lastpass_f.submit = function(){ var form=this; var customEvent = document.createEvent("Event"); customEvent.initEvent("lpCustomEvent", true, true); var d = document.getElementById("hiddenlpsubmitdiv"); for(var i = 0; i < document.forms.length; i++){ if(document.forms[i]==form){ d.innerText=i; } } d.dispatchEvent(customEvent); form.lpsubmitorig2(); } } }}catch(e){}</script>
